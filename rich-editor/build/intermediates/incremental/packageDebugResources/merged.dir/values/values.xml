<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="editor_button_enabled">#333333</color>
    <dimen name="menu_panel_height">55dp</dimen>
    <string name="preview">预览</string>
    <style name="EditorIcon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <!--<item name="android:layout_marginStart">15dp</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/editor_button_enabled</item>
    </style>
    <declare-styleable name="ColorPickerView">
        <attr format="color" name="indicatorColor"/><!--指示点颜色-->
        <attr format="boolean" name="indicatorEnable"/><!--是否启用指示点-->
        <attr format="integer" name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>